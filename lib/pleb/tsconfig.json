{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": false,
        "noImplicitOverride": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "useUnknownInCatchVariables": false,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "noEmit": false,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2020",
        "skipLibCheck": true,
        "sourceMap": false
    },
    "exclude": ["/node_modulsrc"],
    "include": ["src/**/*"]
}
