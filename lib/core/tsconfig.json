{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "jsx": "react-jsx",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "outDir": "dist",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "sourceMap": true,
        "noEmit": false,
        "target": "ES2020"
    },
    "exclude": ["/node_modules"],
    "include": ["./src"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
