{
    "name": "pleb.js",
    "private": true,
    "version": "0.0.1",
    "description": "A really shitty replacement for Next.js",
    "author": "Arvid Edenheim",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/arvidede/pleb.js"
    },
    "bin": {
        "pleb": "src/bin/pleb.ts"
    },
    "scripts": {
        "dev": "nodemon src/index.ts",
        "dev:client": "vite --config vite.config.ts dev",
        "start": "node dist/index.js",
        "tsc": "tsc",
        "build": "npm run build:client && npm run build:server",
        "build:client": "vite build --outDir dist/client",
        "build:server": "vite build --outDir dist/server --ssr src/render/server.tsx"
    },
    "dependencies": {
        "@types/express": "^4.17.13",
        "chalk": "4.1.2",
        "compression": "^1.7.4",
        "express": "^4.18.1",
