{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "checkJs": true,
        "declaration": true,
        "declarationMap": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "outDir": "dist",
        "noEmit": false,
        "module": "ESNext",
        "moduleResolution": "nodenext",
        "target": "ES6",
        "skipLibCheck": true,
        "sourceMap": false
    },
    "exclude": ["/node_modules"],
    "include": ["./src"]
}
