{
    "name": "pleb",
    "private": true,
    "version": "0.1.0",
    "description": "A really shitty replacement for Next.js",
    "author": "Arvid Edenheim",
    "license": "MIT",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/arvidede/pleb"
    },
    "bin": {
        "pleb": "./bin/pleb.js"
    },
    "main": "./index.js",
    "module": "./index.js",
    "types": "./types/index.d.ts",
    "exports": {
        ".": {
            "types": "./index.d.ts",
            "import": "./index.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "link-react": "yarn link ../../../examples/react/node_modules/react",
        "watch": "rimraf dist && mkdir dist && scripts/copy_files_to_bundle.sh && yarn tsc  --watch",
        "build": "yarn build:bundle && yarn build:types",
        "build:bundle": "rimraf dist && webpack",
        "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist --outDir dist",
        "build:client": "vite build --outDir dist/client",
        "build:server": "vite build --outDir dist/server --ssr src/render/server.tsx",
        "lint": "eslint",
        "format": "prettier --write --cache --parser typescript \"src/**/*.ts\""
    },
    "dependencies": {
        "@types/express": "^4.17.13",
        "chalk": "^4.1.2",
        "commander": "^9.4.0",
        "compression": "^1.7.4",
        "esbuild": "^0.14.51",
        "express": "^4.18.1",
        "webpack": "^5.74.0",
        "webpack-dev-server": "^4.9.3",
        "swc-loader": "^0.2.3",
        "webpack-node-externals": "^3.0.0"
    },
    "peerDependencies": {
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^22.0.1",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@swc/cli": "^0.1.57",
        "@swc/core": "^1.2.222",
        "@types/compression": "^1.7.2",
        "@types/eslint": "^8.4.5",
        "@types/node": "^18.6.2",
        "@types/react": "18.0.15",
        "@types/react-dom": "18.0.6",
        "@types/webpack-node-externals": "^2.5.3",
        "@typescript-eslint/eslint-plugin": "^5.30.7",
        "@typescript-eslint/parser": "^5.31.0",
        "eslint": "^8.20.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.6",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "html-webpack-plugin": "^5.5.0",
        "nodemon": "^2.0.19",
        "postcss": "^8.4.14",
        "prettier": "^2.7.1",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "regenerator-runtime": "^0.13.9",
        "rimraf": "^3.0.2",
        "rollup": "^2.75.6",
        "rollup-plugin-typescript2": "^0.32.1",
        "ts-node": "^10.9.1",
        "tsc": "^2.0.4",
        "tslib": "^2.4.0",
        "typescript": "^4.6.4",
        "webpack-cli": "^4.10.0"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "resolutions": {
        "rollup": "2.74.1"
    }
}
